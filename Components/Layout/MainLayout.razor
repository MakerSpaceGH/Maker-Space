@inherits LayoutComponentBase

<div class="page d-flex" style="height:100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div id="sidebar" style="
        width: 260px;
        background: linear-gradient(180deg, #0a58ca 0%, #6610f2 100%);
        color: white;
        padding: 1.5rem;
        box-shadow: 4px 0 12px rgba(0,0,0,0.2);
        position: fixed;
        height: 100vh;
        overflow-y: auto;
        transition: width 0.3s ease;
    ">
        <NavMenu />
    </div>

    <main style="flex-grow:1; display:flex; flex-direction:column; margin-left: 260px; transition: margin-left 0.3s ease;">
        <div class="topbar">
            <div class="makerspace-header">Maker Space</div>
            <div class="login-wrapper">
                <LoginDropdown />
            </div>
        </div>

        <article style="padding:1rem; flex-grow:1; overflow:auto;">
            @Body
        </article>
    </main>
</div>

<style>
    .topbar {
        background: linear-gradient(90deg, #0a58ca 0%, #6610f2 100%);
        color: white;
        height: 70px;
        min-height: 70px;
        max-height: 70px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        position: relative;
        user-select: none;
    }

    .makerspace-header {
        font-weight: 1000;
        font-size: 2.5rem;
        color: white;
        user-select: none;
        text-shadow: 0 0 8px rgba(255,255,255,0.5);
    }

    .login-wrapper {
        min-width: 150px;
        max-width: 220px; /* Maximale Breite */
        width: auto;
        display: flex;
        justify-content: flex-end;
        flex-shrink: 0;
    }

        /* Optional: Falls der LoginDropdown ein Button ist, kann man den max-width einschränken */
        .login-wrapper button {
            max-width: 100%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
</style>
